<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>display crud</title>

  <style>
    table,
    th,
    td {
      border: 1px solid black;
      border-collapse: collapse;
    }

    a {
      outline: none;
      border: none;
      border-radius: 3px;
      padding: 5px 10px;
      display: inline-block;
      text-decoration: none;
    }

    a.btn-edit {
      background-color: orange;
    }

    a.btn-delete {
      background-color: red;
    }
  </style>
</head>

<body>
  <table style="width: 100%">
    <tr>
      <th>Email</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Address</th>
      <th>Actions</th>
    </tr>
    <% for(let i=0; i<data.length; i++) {%>
      <tr>
        <td>
          <%= data[i].email %>
        </td>
        <td>
          <%= data[i].firstName %>
        </td>
        <td>
          <%= data[i].lastName %>
        </td>
        <td>
          <%= data[i].address %>
        </td>
        <td>
          <a href="/edit-crud?id=<%= data[i].id %>" class="btn-edit">Edit</a>
          <a href="/delete-crud?id=<%= data[i].id %>" class="btn-delete">Delete</a>
        </td>
      </tr>
      <%}%>
  </table>
</body>

</html>